<%= form_for @meeting, :html => { :class => "form-horizontal meeting" } do |f| %>

  <% if @meeting.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @meeting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :membername, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :membername, :class => 'form-control' %>
    </div>
    <%=f.error_span(:membername) %>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date) %>
  </div>
  <div class="form-group">
    <%= f.label :limit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :limit, :class => 'form-control' %>
    </div>
    <%=f.error_span(:limit) %>
  </div>
  <div class="form-group">
    <%= f.label :desc, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :desc, :class => 'form-control' %>
    </div>
    <%=f.error_span(:desc) %>
  </div>
  <div class="form-group">
    <%= f.label :location, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.country_select(:location, {selected: @meeting.location}) %>
    
    </div>
    <%=f.error_span(:location) %>
  </div>
  <div class="form-group">
    
    <div class="col-lg-10">
      <%= f.hidden_field :user_id, :value => current_user.id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>



<div class="form-group">
       
  		<%= f.label :Avatar , :class => 'control-label col-lg-2'%><br />
<div class="col-lg-10">
   		<%= f.file_field :avatar, :class => 'form-control' %>
    	</div>
      </div>



  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meetings_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
