<%- model_class = Meeting -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= form_tag meetings_path, :method => :get do %> 
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:membername) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th>Members</th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th>Admin</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= link_to meeting.id, meeting_path(meeting) %></td>
        <td><%= meeting.name %></td>
        <td><%= meeting.title %></td>
        <td><%= meeting.membername %></td>
        <td><%= meeting.date %></td>
        <td><%= meeting.limit %></td>
        <td><%= meeting.desc %></td>
        <td><%= meeting.location %></td>
        <td><%= meeting.user.nickname %></td>
        <td>
          <%= link_to 'Show', meeting ,:class => 'btn btn-info btn-sm'%>
          <%= link_to if can? t('.edit', :default => t("helpers.links.edit")),
                      edit_meeting_path(meeting), :class => 'btn btn-default btn-sm' %>
          <%= link_to if can? t('.destroy', :default => t("helpers.links.destroy")),
                      meeting_path(meeting),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn  btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if(current_user)%>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_meeting_path,
            :class => 'btn btn-primary' %>
<% end %>
