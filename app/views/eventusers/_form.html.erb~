<div class="container">
<div class="row">
<div class="col-xs-offset-4">
<%= form_for(@eventuser) do |f| %>
  <% if @eventuser.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@eventuser.errors.count, "error") %> prohibited this eventuser from being saved:</h2>

      <ul>
      <% @eventuser.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_id %><br>
    <%= f.text_field :event_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
