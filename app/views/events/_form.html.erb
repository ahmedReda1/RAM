<%= form_for :event, url: meeting_event_path(@event.meeting_id,@event), method: :patch do |f|%>

    <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:desc]) %>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:date]) %>
  </div>
  <div class="control-group">
    <%= f.label :place, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :place, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:place]) %>
  </div>
  <div class="control-group">
    <%= f.label :member, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :member, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:member]) %>
  </div>
  <div class="control-group">
    <%= f.label :meeting_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :meeting_id, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:meeting_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            events_path, :class => 'btn btn-default' %>

<% end %>
