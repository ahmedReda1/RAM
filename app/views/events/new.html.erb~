<h1>New Event</h1>
<% @meeting = Meeting.find(params[:meeting_id]) %>
<%= form_for([@meeting, @meeting.events.build]) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :place %><br>
    <%= f.text_field :place %>
  </div>
  <div class="field">
    <%= f.label :member %><br>
    <%= f.number_field :member %>
  </div>
  <div class="field">
    <%= f.label :meeting_id %><br>
    <%= f.text_field :meeting_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

