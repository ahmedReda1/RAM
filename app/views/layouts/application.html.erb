<!DOCTYPE html>
<html>
<head>
  <title>Project</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
<header class="navbar navbar-fixed-top navbar-inverse">
   <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   '#' %></li>
            <li><%= link_to "Log in", '#' %></li>
	    <% if(current_user)%>
	       <li> <img src="<%=current_user.avatar.url %>" height="35" width="35"> </li>
	       <li> Welcome <strong> <%= link_to current_user.nickname,profiles_show_path(current_user.id) %> </strong></li>
		 <% end %>
          </ul>
        </nav>
</header>
</div>
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
<%= yield %>

</div>
</body>
</html>




